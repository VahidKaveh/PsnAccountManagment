{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=psn_database.db",
    "PostgreSql": "Host=localhost;Database=psn_accounts;Username=postgres;Password=your_password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PsnAccountManager.Application.Services.ChangeDetectionService": "Information",
      "PsnAccountManager.Application.Services.ProcessingService": "Information",
      "PsnAccountManager.Application.Services.ScraperService": "Information"
    }
  },
  "AllowedHosts": "*",
  "TelegramSettings": {
    "ApiId": "your_telegram_api_id",
    "ApiHash": "your_telegram_api_hash",
    "PhoneNumber": "your_phone_number",
    "SessionName": "psn_scraper_session"
  },
  "ChangeDetectionSettings": {
    "AutoProcessChanges": true,
    "NotifyAdminOnChanges": true,
    "EnableChangeTracking": true,
    "HashNormalizationEnabled": true,
    "StoreChangeHistory": true,
    "MaxChangeHistoryDays": 30
  },
  "ScrapingSettings": {
    "IntervalMinutes": 5,
    "MaxRetries": 3,
    "EnableParallelProcessing": true,
    "BatchSize": 50,
    "TimeoutSeconds": 30
  },
  "NotificationSettings": {
    "MaxNotifications": 1000,
    "AutoCleanupDays": 7,
    "HighPriorityNotifications": true
  }
}
