@page
@model PsnAccountManager.Admin.Panel.Pages.ParsingProfiles.CreateModel
@{
    ViewData["Title"] = "Create New Profile";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="ProfileName"></label>
                <input asp-for="ProfileName" class="form-control" placeholder="e.g., GatPSN Profile" />
                <span asp-validation-for="ProfileName" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create and Add Rules</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>