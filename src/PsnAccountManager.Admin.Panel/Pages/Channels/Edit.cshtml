@page "{id:int}"
@model PsnAccountManager.Admin.Panel.Pages.Channels.EditModel
@{
    ViewData["Title"] = "Edit Channel";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]: @Model.Input.Name</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <input type="hidden" asp-for="Input.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Status" class="form-label"></label>
                <select asp-for="Input.Status" asp-items="Html.GetEnumSelectList<PsnAccountManager.Shared.Enums.ChannelStatus>()" class="form-control"></select>
                <span asp-validation-for="Input.Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.ParsingProfileId" class="form-label"></label>
                <select asp-for="Input.ParsingProfileId" asp-items="Model.ParsingProfiles" class="form-control">
                    <option value="">-- No Profile --</option>
                </select>
                <span asp-validation-for="Input.ParsingProfileId" class="text-danger"></span>
            </div>
            <hr />
            <h5 class="mt-4 mb-3">Scraping Configuration</h5>

            <div class="form-group mb-3">
                <label asp-for="Input.FetchMode" class="form-label"></label>
                <select asp-for="Input.FetchMode" asp-items="Html.GetEnumSelectList<PsnAccountManager.Shared.Enums.FetchMode>()" class="form-control"></select>
                <span asp-validation-for="Input.FetchMode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.FetchValue" class="form-label"></label>
                <input asp-for="Input.FetchValue" type="number" class="form-control" />
                <span asp-validation-for="Input.FetchValue" class="text-danger"></span>
                <small class="form-text text-muted">This value is only used if Fetch Mode is not 'SinceLastMessage'.</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.DelayAfterScrapeMs" class="form-label"></label>
                <input asp-for="Input.DelayAfterScrapeMs" type="number" class="form-control" />
                <span asp-validation-for="Input.DelayAfterScrapeMs" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>