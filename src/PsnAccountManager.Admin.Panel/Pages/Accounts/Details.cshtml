@page "{id:int}"
@model PsnAccountManager.Admin.Panel.Pages.Accounts.DetailsModel
@{
    ViewData["Title"] = "Account Details";
}

@if (Model.Account != null)
{
    <div class="row">
        <div class="col-md-4">
            <!-- Account Properties Card -->
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    <h3 class="profile-username text-center" style="word-break: break-word;">@Model.Account.Title</h3>
                    <p class="text-muted text-center">From: @Model.Account.Channel?.Name</p>
                    <ul class="list-group list-group-unbordered mb-3">
                        <li class="list-group-item">
                            <b>Status</b> <a class="float-right">@Model.Account.StockStatus</a>
                        </li>
                        <li class="list-group-item">
                            <b>Price (PS4)</b> <a class="float-right">@(Model.Account.PricePs4?.ToString("C") ?? "N/A")</a>
                        </li>
                        <li class="list-group-item">
                            <b>Price (PS5)</b> <a class="float-right">@(Model.Account.PricePs5?.ToString("C") ?? "N/A")</a>
                        </li>
                        <li class="list-group-item">
                            <b>Region</b> <a class="float-right">@Model.Account.Region</a>
                        </li>
                        <li class="list-group-item">
                            <b>Capacity</b> <a class="float-right">@Model.Account.Capacity</a>
                        </li>
                        <li class="list-group-item">
                            <b>Seller</b> <a class="float-right">@(Model.Account.SellerInfo ?? "N/A")</a>
                        </li>
                    </ul>
                    <div class="mt-3">
                        <a asp-page="./Edit" asp-route-id="@Model.Account.Id" class="btn btn-primary btn-block mb-2">
                            <b><i class="fas fa-edit mr-1"></i> Edit Account</b>
                        </a>
                        <a asp-page="./Index" class="btn btn-secondary btn-block">
                            <i class="fas fa-arrow-left mr-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item"><a class="nav-link active" href="#detailsTab" data-toggle="tab">Description & Games</a></li>
                        <li class="nav-item"><a class="nav-link" href="#historyTab" data-toggle="tab">Change History</a></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="active tab-pane" id="detailsTab">
                            <h5><i class="fas fa-gamepad mr-1"></i> Associated Games (@Model.Account.AccountGames.Count)</h5>
                            @if (Model.Account.AccountGames != null && Model.Account.AccountGames.Any())
                            {
                                <ul class="list-group list-group-flush mb-3">
                                    @foreach (var game in Model.Account.AccountGames.Take(6))
                                    {
                                        <li class="list-group-item py-2">@(game.Game?.Title ?? "Game Title Missing")</li>
                                    }
                                </ul>
                                @if (Model.Account.AccountGames.Count > 6)
                                {
                                    <div class="collapse" id="moreGames">
                                        <ul class="list-group list-group-flush mb-3">
                                            @foreach (var game in Model.Account.AccountGames.Skip(6))
                                            {
                                                <li class="list-group-item py-2">@(game.Game?.Title ?? "Game Title Missing")</li>
                                            }
                                        </ul>
                                    </div>
                                    <button class="btn btn-sm btn-link pl-0" type="button" data-toggle="collapse" data-target="#moreGames" aria-expanded="false" aria-controls="moreGames">
                                        Show @(Model.Account.AccountGames.Count - 6) more games...
                                    </button>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No games are linked to this account.</p>
                            }
                            <hr>
                            <h5><i class="fas fa-file-alt mr-1"></i> Original Post Content</h5>
                            <div id="postContentContainer" style="max-height: 200px; overflow: hidden; position: relative;">
                                <pre id="postContent" style="white-space: pre-wrap; word-break: break-word; font-size: 0.9rem;">@Model.Account.Description</pre>
                                <div id="postContentFade" style="position: absolute; bottom: 0; left: 0; width: 100%; height: 50px; background: linear-gradient(to bottom, transparent, white);"></div>
                            </div>
                            <button id="showMorePost" class="btn btn-sm btn-link pl-0 mt-2">Show More</button>
                        </div>
                        <div class="tab-pane" id="historyTab">
                            @if (Model.History != null && Model.History.Any())
                            {
                                <div class="timeline">
                                    @foreach (var item in Model.History)
                                    {
                                        <div>
                                            <i class="fas fa-edit bg-primary"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="fas fa-clock"></i> @item.ChangedAt.ToLocalTime().ToString("g")</span>
                                                <h3 class="timeline-header no-border">Field <strong>@item.FieldName</strong> was changed by <strong>@item.ChangedBy</strong></h3>
                                                <div class="timeline-body">
                                                    <dl><dt class="text-danger">Old Value</dt><dd><code>@(item.OldValue ?? "N/A")</code></dd><dt class="text-success">New Value</dt><dd><code>@(item.NewValue ?? "N/A")</code></dd></dl>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <div><i class="fas fa-clock bg-gray"></i></div>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center mt-4">No changes have been recorded.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger"><h4><i class="icon fas fa-ban"></i> Error!</h4> Account not found.</div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // "Show More" for games
            $('#moreGames').on('show.bs.collapse', function () {
                $('button[data-target="#moreGames"]').text('Show less');
            }).on('hide.bs.collapse', function () {
                var remaining = @(Model.Account?.AccountGames.Count - 6 ?? 0);
                $('button[data-target="#moreGames"]').text('Show ' + remaining + ' more games...');
            });

            // "Show More" for post content
            var postContainer = $('#postContentContainer');
            var showMoreBtn = $('#showMorePost');
            var fadeEffect = $('#postContentFade');

            if (postContainer[0].scrollHeight <= postContainer.innerHeight()) {
                showMoreBtn.hide();
                fadeEffect.hide();
            }

            showMoreBtn.on('click', function() {
                if (postContainer.hasClass('expanded')) {
                    postContainer.animate({ 'max-height': '200px' }, 200);
                    fadeEffect.fadeIn();
                    $(this).text('Show More');
                } else {
                    postContainer.animate({ 'max-height': postContainer[0].scrollHeight }, 200);
                    fadeEffect.fadeOut();
                    $(this).text('Show Less');
                }
                postContainer.toggleClass('expanded');
            });
        });
    </script>
}

