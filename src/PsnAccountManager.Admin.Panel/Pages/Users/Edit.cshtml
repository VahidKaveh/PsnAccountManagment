@page "{id:int}"
@model PsnAccountManager.Admin.Panel.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]: @Model.Input.Username</h3>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Input.Id" />
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">User ID</dt>
                <dd class="col-sm-9">@Model.Input.Id</dd>
                <dt class="col-sm-3">Telegram ID</dt>
                <dd class="col-sm-9">@Model.Input.TelegramId</dd>
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.Input.Username</dd>
            </dl>
            <hr />
            <div class="form-group mb-3">
                <label asp-for="Input.Status" class="form-label"></label>
                <select asp-for="Input.Status" asp-items="Html.GetEnumSelectList<PsnAccountManager.Shared.Enums.UserStatus>()" class="form-control"></select>
                <span asp-validation-for="Input.Status" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>