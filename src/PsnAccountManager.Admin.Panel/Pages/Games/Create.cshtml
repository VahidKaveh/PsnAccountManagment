@page
@model PsnAccountManager.Admin.Panel.Pages.Games.CreateModel
@{
    ViewData["Title"] = "Add New Game";
}
<div class="card card-primary">
    <div class="card-header"><h3 class="card-title">@ViewData["Title"]</h3></div>
    <form method="post">
        <div class="card-body">
            <div class="form-group mb-3">
                <label asp-for="Input.Title"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.SonyCode"></label>
                <input asp-for="Input.SonyCode" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Region"></label>
                <input asp-for="Input.Region" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.PosterUrl"></label>
                <input asp-for="Input.PosterUrl" class="form-control" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>