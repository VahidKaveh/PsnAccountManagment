@page "{id:int}"
@model PsnAccountManager.Admin.Panel.Pages.Games.EditModel
@{
    ViewData["Title"] = "Edit Game";
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]: @Model.Input.Title</h3>
    </div>
    <form method="post">
        <!-- Hidden field for the ID is crucial for the POST request -->
        <input type="hidden" asp-for="Input.Id"/>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Title" class="form-label"></label>
                <input asp-for="Input.Title" class="form-control"/>
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.SonyCode" class="form-label"></label>
                <input asp-for="Input.SonyCode" class="form-control"/>
                <span asp-validation-for="Input.SonyCode" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Region" class="form-label"></label>
                <input asp-for="Input.Region" class="form-control"/>
                <span asp-validation-for="Input.Region" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.PosterUrl" class="form-label"></label>
                <input asp-for="Input.PosterUrl" class="form-control"/>
                <span asp-validation-for="Input.PosterUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        // Enable client-side validation
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}